{% extends 'base.html.twig' %}

{% block title %}Connexion à votre compte{% endblock %}

{% block body %}



<section class="container">
    <div class="info-container row">
        {% for message in app.flashes('success') %}
        
            <div style="" class="col-3 mx-auto alert alert-success">
                    {{ message }}
            </div>
        
        {% endfor %}
    </div>
    <div class="row">
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">
            <div class="bg-light p-4 mt-5">
                <h2>Connectez-vous</h2>

                <form action="{{ path('account_login') }}" method="post">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" name="_username" id="email" class="form-control" placeholder="Adresse mail" required value="{{username}}">
                    </div>

                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" placeholder="Mot de passe" class="form-control" required>
                    </div>
                    <div class="error-container">
                        {% if hasError %}
                            <div class="alert alert-danger">Une erreur est survenue, vérifier vos informations de connexion.</div>
                        {% endif %}
                    </div>
                    <div class="form-group row">
                        <button type="submit" class="col-3 mt-3 btn btn-success mx-auto">Connexion</button>
                        <a href="{{path('account_register')}}" class="col-3 mt-3 btn btn-success mx-auto">S'inscrire</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
</section>

{% endblock %}
