{% extends 'base.html.twig' %}
{% block title %}{{title}}{% endblock %}

{% block body %}
<div class="info-container row">
        {% for message in app.flashes('success') %}
        
            <div style="" class="col-3 mx-auto alert alert-success">
                    {{ message }}
            </div>
        
        {% endfor %}
    </div>
    <div class="container">
        <h2 class="title-line mt-5 mb-3">Modification du profil</h2>

        <div>
           {{ form_start(form) }} 
           {{ form_widget(form) }}

           <button type="submit" class="btn btn-success">Enregistrer</button>

           {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
